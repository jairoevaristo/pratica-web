<label>Nome</label>
  <input type="text" name="nome" class="border rounded p-2 mb-4 border-slate-300" />

<label>Descrição</label>
  <textarea class="border p-2 rounded mb-4 border-slate-300" maxlength="120" name="descricao" ></textarea>

<label>Preço</label>
  <input class="border p-2 rounded mb-4 border-slate-300" type="text" name="preco" class="border rounded p-2" />

  <label>Categoria</label>
  <select name="categoria" class="border border-slate-300 rounded p-2 mb-4">
    <% categorias.forEach(element => { %>
      <option class="h-20" value=<%= element.valor %>><%= element.valor %></option>
    <% }) %>
  </select>

  <div class="flex justify-center w-full">
    <a href="/produtos" class="mt-4 px-6 py-2 rounded cursor-pointer border border-slate-700 text-slate-700 hover:bg-slate-700 hover:text-slate-200 mr-4 transition-all">Voltar</a>
    <input type="submit" value="Salvar" class="mt-4 px-6 py-2 rounded cursor-pointer bg-slate-700 text-slate-200" />
  </div>